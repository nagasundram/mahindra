<div class="authform-outer">
<div class="authform">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
    <h3>Forgot your password?</h3>
    <p>We'll send password reset instructions.</p>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: 'Email'%>
    </div>
     <div class="center">
       <%= f.submit 'Reset Password', :class => 'button' %>
     </div>
  <% end %>
</div>
</div>


<script>
  $(".authform-outer").backstretch("<%= asset_path "login-bg.jpg" %>");
</script>
