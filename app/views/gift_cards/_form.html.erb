<div class="authform">
  <%= form_tag("gift_cards/validate", :method => "get", :html => {:autocomplete => "false"}) do |f| %>
    <h3></h3>
    <div class="form-group">
    <%= label_tag(:card_number, "Gift Card Number") %>
    <%= text_field_tag(:card_number, '', :autofocus => true, class: 'form-control', required: true) %>
    </div>
    <div class="form-group">
      <%= label_tag(:pin, "PIN") %>
      <%= password_field_tag(:pin, '', class: 'form-control', required: true) %>
    </div>
      <%= button_tag("Clear", type: :reset, :class => 'btn btn-danger right') %>
      <%= submit_tag("Validate", :class => 'btn btn-primary right') %>
  <% end %>
</div>